					  <th>Patient Code</th>
					 <th>Patient File No</th>
					 <th>Full Name</th>
					 
					<th>Email Address</th>
					<th>Telephone</th>
					 
					<th><i class="glyphicon glyphicon-asterisk"></i></th>
				</tr>
			</thead>
				 <!-- Table heading END -->
				<!-- Table body -->
			<tbody>
				<tr th:each="patient : ${patient}">
					
					<!-- 
					
					<td th:text="${patient.patientFileno != null} ? ${patient.patientFileno}">patientcode</td>
				
