				<td th:text="${patient.patientCode}">patientcode</td>
			
				<td th:text="${patient.patientFileno}">File No</td>
				
					<td	th:text=" ${patient.surname} + ' ' + ${patient.firstName} + ' ' + ${patient.otherName} ">Lastname</td>
				
					<td th:text="${patient.email}">Email</td>
				
					<td th:text="${patient.telnumber}">Tel</td>
					 
					<td><a class="btn btn-xs btn-primary tooltips"	title="View and manage patient details"
												th:href="@{/patients/view/{id}(id=${patient.patientId})}">
													<i class="fa fa-eye">  </i>
											</a>
											 <a class="btn btn-xs btn-warning tooltips"
						title="Edit Item details"
						th:href="@{/patients/edit/{id}(id=${patient.patientId}) }"> <i
							class="fa fa-edit"></i> </a>
				
			<!-- 	<a class="btn btn-xs btn-danger tooltips" 
